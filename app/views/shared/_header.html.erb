<header class="bg-secondary-50 text-white shadow-nav">
    <div class="container mx-auto flex justify-between items-center py-1 px-6">
        <%= link_to "Blog", root_path, class: "text-lg font-bold text-primary-600" %>

        <nav class="hidden md:flex items-center space-x-12">
            <%= link_to "Anasayfa", root_path, class: "text-secondary-600 hover:text-primary-400 transition duration-100" %>
            <%= link_to "Kategoriler", categories_path, class: "text-secondary-600 hover:text-primary-400 transition duration-100" %>
            <%= link_to "Hakkımda", about_path, class: "text-secondary-600 hover:text-primary-400 transition duration-100" %>
            <%= link_to "İletişim", contact_path, class: "text-secondary-600 hover:text-primary-400 transition duration-100" %>

            <% if user_signed_in? %>
                <div class="flex items-center space-x-3">
                    <div class="w-9 h-9 border-2 border-primary-600 text-white rounded-full flex items-center justify-center font-semibold text-lg bg-primary-600 ring-4 ring-primary-100">
                        <%= current_user.first_name[0].upcase + current_user.last_name[0].upcase %>
                    </div>
                    <%= link_to 'Logout', destroy_user_session_path(locale: I18n.locale), method: :delete, data: { turbo: false }, class: "text-secondary-600 hover:text-primary-400 transition duration-100  font-medium" %>
                    <%= link_to 'Edit Profile', edit_users_profile_path(locale: I18n.locale), class: "text-secondary-600 hover:text-primary-400 transition duration-100 font-medium" %>

                </div>
            <% else %>
                <%= link_to 'Login', new_user_session_path , class: "text-secondary-600 hover:text-primary-400 transition duration-100" %>
                <%= link_to 'Sign up', new_user_registration_path , class: "text-secondary-600 hover:text-primary-400 transition duration-100" %>
            <% end %>

        </nav>

        <div class="flex items-center space-x-4">
            <%= render 'shared/lang' %>
        </div>

        <button id="menu-toggle" class="block md:hidden text-white focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
        </button>
    </div>
</header>
