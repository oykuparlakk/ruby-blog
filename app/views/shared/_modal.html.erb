<div id="modal" class="fixed inset-0 z-50 overflow-auto bg-black bg-opacity-40 flex items-center justify-center" style="display: none;" data-controller="modal">
    <div class="relative w-full max-w-2xl mx-auto">
        <div class="bg-white rounded-lg shadow-xl overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
                <h5 class="text-xl font-semibold text-gray-800"><%= title %></h5>
                <button type="button" class="text-gray-400 hover:text-gray-500 focus:outline-none" data-action="modal#close">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <div class="px-6 py-4">
                <%= turbo_frame_tag dom_id %>
            </div>
        </div>
    </div>
</div>
