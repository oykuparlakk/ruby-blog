<div class="fixed inset-0 bg-white bg-opacity-50 backdrop-blur-md flex items-center justify-center z-50 hidden" data-controller="modal" data-modal-target="parent">
    <div class="bg-white rounded-2xl w-full max-w-3xl lg:max-w-4xl mx-4 sm:mx-0 shadow-lg">
        <div class="flex justify-end p-4">
            <button type="button" class="text-gray-500 hover:text-gray-700 text-3xl" data-action="modal#close" aria-label="Close">
                &times;
            </button>
        </div>
        <div class="p-6 space-y-6 text-gray-700">
            <%= turbo_frame_tag 'modal', data: { "modal-target": "frame", "action": "turbo:frame-load->modal#open" } do %><% end %>
        </div>
    </div>
</div>
