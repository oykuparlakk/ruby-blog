<div class="max-w-4xl mx-auto p-4 sm:p-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Bildirimler</h2>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <%= turbo_stream_from "notifications_#{current_user.id}" %>

        <ul id="notifications" class="divide-y divide-gray-200">
            <% if @notifications.any? %>
                <%= render @notifications %>
            <% else %>
                <li class="p-4 text-gray-500 text-center">Henüz bildirim bulunmamaktadır.</li>
            <% end %>
        </ul>
    </div>
</div>
