<section class="max-w-6xl mx-auto p-6 bg-white shadow-lg rounded-lg">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Edit User</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-4">
            <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "h-12 px-4 border border-gray-300 rounded-md w-full text-gray-700 placeholder-gray-500 focus:ring-2 focus:ring-primary-50 focus:outline-none" %>
        </div>

        <div class="mb-4">
            <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :last_name, autocomplete: "last_name", class: "h-12 px-4 border border-gray-300 rounded-md w-full text-gray-700 placeholder-gray-500 focus:ring-2 focus:ring-primary-50 focus:outline-none" %>
        </div>

        <div class="mb-4">
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "h-12 px-4 border border-gray-300 rounded-md w-full text-gray-700 placeholder-gray-500 focus:ring-2 focus:ring-primary-50 focus:outline-none" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="mb-4 text-sm text-gray-600">
                Currently waiting confirmation for:
                <%= resource.unconfirmed_email %>
            </div>
        <% end %>

        <div class="mb-4">
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <i class="text-xs text-gray-500">(leave blank if you don't want to change it)</i><br/>
            <%= f.password_field :password, autocomplete: "new-password", class: "h-12 px-4 border border-gray-300 rounded-md w-full text-gray-700 placeholder-gray-500 focus:ring-2 focus:ring-primary-50 focus:outline-none"%>
            <% if @minimum_password_length %>
                <br/>
                <em><%= @minimum_password_length %>
                    characters minimum</em>
            <% end %>
        </div>

        <div class="mb-4">
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "h-12 px-4 border border-gray-300 rounded-md w-full text-gray-700 placeholder-gray-500 focus:ring-2 focus:ring-primary-50 focus:outline-none" %>
        </div>

        <div class="mb-4">
            <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
            <i class="text-xs text-gray-500">(we need your current password to confirm your changes)</i><br/>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "h-12 px-4 border border-gray-300 rounded-md w-full text-gray-700 placeholder-gray-500 focus:ring-2 focus:ring-primary-50 focus:outline-none"%>
        </div>

        <div class="flex justify-end mt-6">
            <%= f.submit "Update", class: "w-full bg-primary-500 text-white font-bold py-2 rounded-lg hover:bg-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-700 transition duration-200" %>
        </div>
    <% end %>

    <h3 class="mt-6 text-lg font-medium text-gray-700">Cancel my account</h3>

    <div class="mt-4 text-sm text-gray-600">Unhappy?
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-red-600 hover:text-red-800" %>
    </div>

    <div class="mt-4">
        <%= link_to "Back", :back, class: "text-primary-500 hover:text-primary-600" %>
    </div>
</section>
