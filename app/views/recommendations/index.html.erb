<%= turbo_frame_tag 'modal' do %>
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Gelen Öneriler</h1>

    <% if @recommendations.any? %>
        <ul class="space-y-4">
            <% @recommendations.each do |recommendation| %>
                <li class="bg-gray-50 rounded-lg p-4 shadow transition duration-300 hover:shadow-md">
                    <%= link_to article_path(recommendation.article), class: "block" do %>
                        <div class="flex items-center justify-between">
                            <span class="text-lg font-semibold text-primary-600 hover:text-primary-700 transition duration-200">
                                <%= recommendation.article.title %>
                            </span>
                            <span class="text-sm text-gray-600">
                                Öneren:
                                <span class="font-medium">
                                    <%= recommendation.user ? recommendation.user.first_name : 'Bilinmeyen' %>
                                </span>
                            </span>
                        </div>
                    <% end %>
                </li>
            <% end %>
        </ul>
    <% else %>
        <p class="text-gray-600 text-center py-8">Henüz size gelen bir öneri yok.</p>
    <% end %>
<% end %>
