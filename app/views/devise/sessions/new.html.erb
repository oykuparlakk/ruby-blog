<div class="flex items-center justify-center min-h-screen">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
        <h2 class="text-center text-secondary-900 text-xl font-semibold mb-6">Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field mb-4">
                <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "h-12 px-4 border border-gray-300 rounded-md w-full text-gray-700 placeholder-gray-500 focus:ring-2 focus:ring-primary-50 focus:outline-none" %>
            </div>

            <div class="field mb-4">
                <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.password_field :password, autocomplete: "current-password", class: "h-12 px-4 border border-gray-300 rounded-md w-full text-gray-700 placeholder-gray-500 focus:ring-2 focus:ring-primary-50 focus:outline-none" %>
            </div>

            <% if devise_mapping.rememberable? %>
                <div class="field mb-4">
                    <%= f.check_box :remember_me, class: "h-4 w-4 text-primary-600 border-gray-300 rounded focus:ring-primary-600" %>
                    <%= f.label :remember_me, class: "text-sm text-gray-700" %>
                </div>
            <% end %>

            <div class="actions">
                <%= f.submit "Log in", class: "w-full py-2 px-4 bg-primary-600 text-white rounded-lg shadow-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500" %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>
