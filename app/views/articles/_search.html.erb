<%= search_form_for @query, url: search_articles_path, method: :get, data: { turbo_frame: "articles" } do |form| %>
    <div class="flex items-center gap-6 mb-4 text-gray-800 flex-wrap">

        <%= form.search_field :title_cont, 
        placeholder: t('articles.search_placeholder'), 
        class: "h-12 px-6 border border-gray-300 rounded-md w-72 text-gray-700 placeholder-gray-500 focus:ring-2 focus:ring-primary-50 focus:outline-none transition duration-300" %>

        <%= form.select :status_eq, Article::VALID_STATUSES, 
        { include_blank: t('articles.status_placeholder') }, 
        class: "h-12 px-6 border border-gray-300 rounded-md text-gray-700 bg-white placeholder-gray-500 focus:ring-2 focus:ring-primary-50 focus:outline-none w-72" %>

        <%= form.submit t('shared.search'), 
        class: "h-12 px-6 bg-primary-600 text-white rounded-md hover:bg-primary-500 transition duration-300 focus:outline-none focus:ring-2 focus:ring-primary-light" %>

    </div>
<% end %>
