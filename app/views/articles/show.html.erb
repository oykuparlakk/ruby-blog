<div class="min-h-screen ">
    <article class="max-w-7xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden">
        <header class="relative">
            <img src='https://via.placeholder.com/1200x400' alt="<%= @article.title %>" class="w-full h-96 object-cover">
                <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent"></div>
                <div class="absolute bottom-0 left-0 p-8">
                    <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-4 leading-tight">
                        <%= @article.title %>
                    </h1>
                    <div class="flex items-center space-x-4">
                        <img src='https://via.placeholder.com/40' alt="<%= @article.user %>" class="w-12 h-12 rounded-full border-2 border-white">
                            <div>
                                <p class="text-white font-semibold"><%= @article.user %></p>
                                <p class="text-gray-300 text-sm"><%= @article.created_at.strftime("%B %d, %Y") %></p>
                            </div>
                        </div>
                    </div>
                </header>

                <div class="flex flex-wrap justify-between items-center gap-4 p-8 md:p-12">
                    <div class="flex flex-wrap gap-4">
                        <%= link_to edit_article_path(@article, locale: I18n.locale), class: "flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-200" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                            </svg>
                            Edit
                        <% end %>
                        <%= link_to article_path(@article, locale: I18n.locale), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this article?" }, class: "flex items-center px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition duration-200" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
                            </svg>
                            Delete
                        <% end %>
                    </div>
                    <%= link_to new_article_recommendation_path(@article, locale: I18n.locale), class: "flex items-center px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition duration-200" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z"/>
                        </svg>
                        Recommend Article
                    <% end %>
                </div>

                <div class="p-8 md:p-12">
                    <div class="prose prose-lg max-w-none">
                        <%= @article.body %>
                    </div>

                    <div class="mt-10 flex flex-wrap gap-2">
                        <% @article.tags.each do |tag| %>
                            <span class="px-4 py-2 bg-primary-300 text-primary-800 rounded-full text-sm font-medium">
                                #<%= tag.name %>
                            </span>
                        <% end %>
                    </div>


                </div>
            </article>

            <section class="max-w-7xl mx-auto mt-12 bg-white shadow-xl rounded-2xl overflow-hidden">
                <div class="p-8 md:p-12">
                    <h2 class="text-3xl font-bold text-gray-900 mb-8">Comments</h2>

                    <div class="space-y-8">
                        <%= render partial: 'comments/comment', collection: @article.comments %>
                    </div>

                    <div class="mt-12">
                        <h3 class="text-2xl font-bold text-gray-900 mb-6">Add a comment</h3>
                        <%= render 'comments/form', article: @article %>
                    </div>
                </div>
            </section>
        </div>
