<div class="flex flex-col gap-6">
    <div class="bg-white p-8 border border-gray-200 shadow-md rounded-lg">
        <div class="flex flex-col items-center justify-center text-center">
            <h1 class="text-3xl font-extrabold text-gray-800 mb-4">
                <%= t('articles.title') %>
            </h1>
            <p class="text-lg text-gray-600 mb-6">
                <%= t('articles.subtitle', count: Article.public_count) %>
            </p>
            <div class="w-full flex items-center justify-center">
                <%= render 'search' %>
            </div>
            <%= link_to t('articles.new_article'), new_article_path, 
        class: "mt-3 px-6 py-3 text-sm font-semibold text-white bg-primary-600 hover:bg-primary-500 rounded-lg shadow-md transition duration-300" %>
        </div>
    </div>

    <div id="articles" class="bg-white border border-gray-200 shadow-md rounded-lg p-6">
        <table class="min-w-full table-auto">
            <thead class="bg-gray-50 border-b border-gray-200">
                <tr>
                    <th class="py-4 px-6 text-left text-sm font-semibold text-gray-800">
                        <%= sort_link(@query, :id, 'ID', { class: 'cursor-pointer hover:text-primary-500' }) %>
                    </th>
                    <th class="py-4 px-6 text-left text-sm font-semibold text-gray-800">
                        <%= sort_link(@query, :title, t('table.title'), { class: 'cursor-pointer hover:text-primary-500' }) %>
                    </th>
                    <th class="py-4 px-6 text-left text-sm font-semibold text-gray-800">
                        <%= sort_link(@query, :body, t('table.description'), { class: 'cursor-pointer hover:text-primary-500' }) %>
                    </th>
                    <th class="py-4 px-6 text-left text-sm font-semibold text-gray-800">
                        <%= t('table.status') %>
                    </th>
                    <th class="py-4 px-6 text-left text-sm font-semibold text-gray-800">
                        <%= t('table.actions') %>
                    </th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                <%= render partial: 'articles/table', collection: @articles, as: :article %>
            </tbody>
        </table>
    </div>

    <div class="flex justify-center">
        <%== pagy_nav(@pagy, link_extra: 'class="pagination-button bg-primary-600 hover:bg-primary-500 text-white rounded-md px-3 text-sm"') %>
    </div>

</div>
