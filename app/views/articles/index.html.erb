<div class="flex flex-col gap-3">
    <div class="flex items-center space-x-4">
        <%= render 'lang' %>
    </div>

    <div class="bg-white p-5 border shadow-sm">
        <div class="flex flex-col items-center justify-center">
            <h1 class="text-3xl font-semibold mb-4 text-gray-500"><%= t('articles.title') %></h1>
            <p class="text-lg mb-4 text-gray-500">
                <%= t('articles.subtitle', count: Article.public_count) %>
            </p>
            <%= render 'search' %>
            <%= link_to t('articles.new_article'), new_article_path, class: "text-blue-500 hover:text-blue-700 mb-4 inline-block" %>
        </div>
    </div>

    <div id="articles">
        <%= render partial: 'articles/table', locals: { articles: @articles } %>
    </div>
</div>
