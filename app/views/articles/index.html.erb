<div class="flex flex-col gap-3">
    <div class="bg-white p-5 border shadow-sm">
        <div class="flex flex-col items-center justify-center">
            <h1 class="text-3xl font-semibold mb-4 text-gray-500">Articles</h1>
            <p class="text-lg mb-4 text-gray-500">Our blog has
                <%= Article.public_count %>
                articles and counting!</p>
            <%= render 'search' %>
            <%= link_to "New Article", new_article_path, class: "text-blue-500 hover:text-blue-700 mb-4 inline-block" %>
        </div>
    </div>


    <div id="articles">
        <%= render partial: 'articles/table', locals: { articles: @articles } %>
    </div>
</div>
