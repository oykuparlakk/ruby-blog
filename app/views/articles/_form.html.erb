<%= form_with(model: article, local: true, class: "p-6") do |form| %>
    <section>
        <% if article.errors.any? %>
            <div class="bg-red-100 text-red-800 p-4 rounded-lg mb-4">
                <ul>
                    <% article.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
    </section>

    <section class="mb-4">
        <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :title, class: "h-12 px-4 border border-gray-300 rounded-md w-full text-gray-700 placeholder-gray-500 focus:ring-2 focus:ring-primary focus:outline-none" %>
    </section>

    <section class="mb-4">
        <%= form.label :body, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :body, class: "h-12 px-4 border border-gray-300 rounded-md w-full text-gray-700 placeholder-gray-500 focus:ring-2 focus:ring-primary focus:outline-none" %>
    </section>

    <section class="mb-4">
        <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :status, ['Draft', 'Published'], {}, class: "h-12 px-4 border border-gray-300 rounded-md w-full text-gray-700 placeholder-gray-500 focus:ring-2 focus:ring-primary focus:outline-none" %>
    </section>

    <section class="flex justify-end">
        <%= form.submit "Save Changes", class: "inline-block bg-indigo-600 text-white hover:cursor-pointer font-bold py-2 px-6 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-primary-light" %>
    </section>
<% end %>
