<tr class="hover:bg-primary-200 hover:bg-opacity-10 transition-all duration-200">
    <td class="py-3 px-6 text-sm text-gray-800">
        <%= article.id %>
    </td>
    <td class="py-3 px-6 text-sm text-primary-600">
        <%= link_to article.title, article_path(article, locale: I18n.locale), class: "text-primary-600 hover:text-primary-800" %>
    </td>
    <td class="py-3 px-6 text-sm text-gray-800">
        <%= article.body.truncate(100) %>
    </td>
    <td class="py-3 px-6 text-sm text-gray-800">
        <%= t("visible.valid_statuses.#{article.status}") %>
    </td>
    <td class="py-3 px-6 text-sm text-gray-800">
        <div class="w-6 h-6 border-2 border-primary-600 text-white rounded-full flex items-center justify-center text-xs bg-primary-600 ring-4 ring-primary-100">
            <%= article.user.first_name[0].upcase + article.user.last_name[0].upcase %>
        </div>
    </td>
    <td class="py-3 px-6 text-sm">
        <% if current_user.role_admin? || article.user == current_user %>
            <%= link_to t("actions.edit"), edit_article_path(article, locale: I18n.locale), 
        class: "text-primary-600 hover:text-primary-700 transition-colors" %>
            |
            <%= link_to t("actions.destroy"), article_path(article, locale: I18n.locale), 
        data: { turbo_method: :delete, turbo_confirm: t("are_you_sure") }, 
        class: "text-primary-600 hover:text-primary-700 transition-colors" %>
        <% end %>
    </td>

</tr>
