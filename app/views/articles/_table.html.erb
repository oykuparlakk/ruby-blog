<tr class="hover:bg-primary-200 hover:bg-opacity-10 transition-all duration-200">
    <td class="py-3 px-6 text-sm text-gray-800">
        <%= article.id %>
    </td>
    <td class="py-3 px-6 text-sm text-primary-600">
        <%= link_to article.title, article_path(article, locale: I18n.locale), class: "text-primary-600 hover:text-primary-800" %>
    </td>
    <td class="py-3 px-6 text-sm text-gray-800">
        <%= article.body.truncate(100) %>
    </td>
    <td class="py-3 px-6 text-sm text-gray-800">
        <%= article.status %>
    </td>
    <td class="py-3 px-6 text-sm">
        <%= link_to "Edit", edit_article_path(article, locale: I18n.locale), 
            class: "text-primary-600 hover:text-primary-700 transition-colors" %>
        |
        <%= link_to "Destroy", article_path(article, locale: I18n.locale), 
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
            class: "text-primary-600 hover:text-primary-700 transition-colors" %>
    </td>
</tr>
