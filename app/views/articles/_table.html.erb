<table class="min-w-full bg-white border border-gray-200 shadow-md">
    <thead class="bg-gray-100">
        <tr>
            <th class="py-3 px-6 text-left text-sm font-semibold text-gray-500">
                <%= sort_link(@query, :id, 'ID', { class: 'cursor-pointer' }) %>
            </th>
            <th class="py-3 px-6 text-left text-sm font-semibold text-gray-500">
                <%= sort_link(@query, :title, t('table.title'), { class: 'cursor-pointer' }) %>
            </th>
            <th class="py-3 px-6 text-left text-sm font-semibold text-gray-500">
                <%= sort_link(@query, :body, t('table.description'), { class: 'cursor-pointer' }) %>
            </th>
            <th class="py-3 px-6 text-left text-sm font-semibold text-gray-500">
                <%= t('table.status') %>
            </th>
            <th class="py-3 px-6 text-left text-sm font-semibold text-gray-500">
                <%= t('table.actions') %>
            </th>
        </tr>
    </thead>

    <tbody>
        <% if articles.any? %>
            <% articles.each do |article| %>
                <% unless article.archived? %>
                <tr class="border-b hover:bg-gray-50">
                    <td class="py-3 px-6 text-sm text-gray-800"><%= article.id %></td>
                    <td class="py-3 px-6 text-sm text-gray-800">
                        <%= link_to article.title, article_path(article, locale: I18n.locale) %>
                    </td>
                    <td class="py-3 px-6 text-sm text-gray-800"><%= article.body.truncate(100) %></td>
                    <td class="py-3 px-6 text-sm text-gray-800"><%= article.status %></td>
                    <td class="py-3 px-6 text-sm">
                        <%= link_to "Edit", edit_article_path(article, locale: I18n.locale), class: "text-blue-500 hover:text-blue-700" %>
                        |
                        <%= link_to "Destroy", article_path(article, locale: I18n.locale), 
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                    class: "text-red-500 hover:text-red-700" %>
                    </td>
                </tr>
            <% end %>
        <% end %>
    <% else %>
        <tr>
            <td colspan="5" class="py-3 px-6 text-center text-gray-500">No articles found.</td>
        </tr>
    <% end %>

</tbody></table>
