<turbo-frame id="articles_frame">

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% articles.each do |article| %>
            <%= link_to article_path(article), data: { turbo_frame: "_top" }, class: "block h-full" do %>
                <div class="article bg-secondary-50 shadow-md rounded-lg overflow-hidden transition duration-300 hover:shadow-xl h-full flex flex-col">
                    <% if article.image.attached? %>
                        <%= image_tag article.image, class: "w-full h-48 object-cover" %>
                    <% else %>
                        <div class="w-full h-48 bg-purple-200 flex items-center justify-center">
                            <span class="text-primary-600">No Image</span>
                        </div>
                    <% end %>
                    <div class="p-6 flex-grow bg-gradient-to-b from-secondary-50 to-primary-50">
                        <h3 class="text-xl font-semibold mb-2 text-secondary-800 hover:text-primary-600 transition duration-200">
                            <%= article.title %>
                        </h3>
                        <p class="text-secondary-600 text-sm">
                            <%= article.body.to_plain_text.truncate(100) %>
                        </p>
                    </div>
                    <div class="px-6 py-4 bg-primary-100">
                        <span class="inline-block bg-primary-200 rounded-full px-3 py-1 text-sm font-semibold text-primary-700 mr-2">
                            <%= article.created_at.strftime("%B %d, %Y") %>
                        </span>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
</turbo-frame>
