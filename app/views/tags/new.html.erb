<h1 class="text-2xl font-bold mb-4">New Tag</h1>

<%= form_with model: @tag, local: true do |form| %>
    <section class="bg-white border border-gray-200 shadow-md rounded-lg p-6 mb-6 max-w-6xl mx-auto">
        <div class="mb-4">
            <%= form.label :name, 'Tag Name', class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= form.text_field :name, class: "h-12 px-4 border border-gray-300 rounded-md w-full text-gray-700 placeholder-gray-500 focus:ring-2 focus:ring-primary-50 focus:outline-none" %>

            <% @tag.errors.full_messages_for(:name).each do |message| %>
                <div class="text-red-500 text-sm mt-1"><%= message %></div>
            <% end %>
        </div>

        <div>
            <%= form.submit "Create Tag", class: "w-full bg-primary-500 text-white font-bold py-2 rounded-lg hover:bg-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-700 transition duration-200" %>
        </div>
    </section>
<% end %>

<%= link_to 'Back to Tags', tags_path, class: "text-primary-500 mt-4" %>
