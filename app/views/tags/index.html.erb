<div class="max-w-6xl mx-auto relative">
    <nav class="flex flex-wrap gap-2 mb-6 shadow-md bg-gray-100 p-2 rounded-lg">
        <% @tags.each do |tag| %>
            <%= link_to tag.name, tag_path(tag), data: { turbo_frame: "articles" }, class: "px-4 py-2 rounded-md text-sm font-medium transition-colors duration-150 focus:outline-none focus:ring-2 focus:shadow-lg focus:ring-offset-2 focus:ring-primary-500 bg-white hover:bg-primary-300" %>
        <% end %>
    </nav>

    <turbo-frame id="articles">
        <p class="text-center text-gray-500">Bir etikete tıklayarak o etikete ait makaleleri görüntüleyebilirsiniz.</p>
    </turbo-frame>
</div>
