<%= form_with(model: [article, article.comments.build], local: true, url: article_comments_path(article, locale: I18n.locale)) do |form| %>
    <div>
        <%= form.label :commenter %>
        <%= form.text_field :commenter %>
    </div>

    <div>
        <%= form.label :body %>
        <%= form.text_area :body %>
    </div>

    <div>
        <%= form.submit "Add Comment" %>
    </div>
<% end %>
