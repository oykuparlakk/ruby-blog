<%= form_with(model: [article, article.comments.build], local: true, url: article_comments_path(article), class: "space-y-6 bg-gray-50 p-6 rounded-xl") do |form| %>
    <div>
        <%= form.label :commenter, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :commenter, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div>
        <%= form.label :body, "Your comment", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :body, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div>
        <%= form.submit "Post Comment", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>
<% end %>
