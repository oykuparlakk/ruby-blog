<% unless comment.archived? %>
<section class="bg-white shadow-md rounded-lg p-6 mb-4">
    <p class="text-sm font-semibold text-gray-700 mb-2">
        <strong>Commenter:</strong>
        <%= comment.commenter %>
    </p>

    <p class="text-base text-gray-900 mb-4">
        <strong>Comment:</strong>
        <%= comment.body %>
    </p>

    <%= link_to "Destroy Comment", [comment.article, comment], data: { 
        turbo_method: :delete, turbo_confirm: "Are you sure?" 
      }, class: "inline-block bg-red-600 text-white font-bold py-2 px-6 rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500" %>
</section><% end %>
