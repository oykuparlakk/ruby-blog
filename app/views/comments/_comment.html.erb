<div id="comment_<%= comment.id %>" class="p-5 bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-md transition duration-150 mb-4">
  <div class="flex items-start space-x-4">
    <div class="flex-shrink-0">
      <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white font-bold text-sm">
        <%= comment.user.first_name[0].upcase + comment.user.last_name[0].upcase %>
      </div>
    </div>
    
    <div class="flex-1 min-w-0">
      <div class="flex items-center justify-between mb-1">
        <p class="text-gray-900 font-medium"><%= comment.user.full_name %></p>
        <p class="text-gray-500 text-xs"><%= comment.created_at.strftime("%b %d, %Y Â· %H:%M") %></p>
      </div>
      
      <div class="prose prose-sm max-w-none text-gray-700 mb-3">
        <%= comment.content %>
      </div>
      
      <div class="flex items-center space-x-4 mt-2">
        <button class="text-gray-500 hover:text-gray-700 text-sm flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
          </svg>
          Like
        </button>
        
        <button class="text-gray-500 hover:text-gray-700 text-sm flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          Reply
        </button>
        
        <% if comment.user == current_user %>
          <%= link_to article_comment_path(comment.article, comment), 
              data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this comment?" }, 
              class: "text-red-500 hover:text-red-700 text-sm flex items-center ml-auto" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Delete
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>